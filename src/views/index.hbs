{{!-- Banner --}}
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                </ol>
                <div class="carousel-inner">
                    <div class="carousel-item active" width="100%" height="2">
                        <img class="d-block w-100 h-50" width="100%" height="2" src="/public/images/banner/banner1.png"
                            alt="First slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100 h-50" width="100%" height="2" src="./public/images/banner/banner2.png"
                            alt="Second slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100 h-50" width="100%" height="2" src="./public/images/banner/banner3.png"
                            alt="Third slide">
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
    </div>
</div>

{{!-- Share your Image --}}
<div class="container">
    <div class="row">
        <div class="col-12">
            <div>
                <div class="card-header bg-dark">
                    <h3 class="card-title text-white">
                        <i class="far fa-image"></i>Upload and Image
                    </h3>
                </div>
                <div class="card-body bg-white">
                    <form action="/images" method="post" enctype="multipart/form-data">
                        <div class="form-group">
                            <div class="custom-file">
                                <input type="file" name="image" class="custom-file-input" id="inputGroup"
                                    aria-describedby="inputGroupFileAddon" required>
                                <label for="inputGroupFile" class="custom-file-label">Choose file</label>
                            </div>

                        </div>
                        <div class="form-group">
                            <input type="text" name="title" class="form control" placeholder="Title for the image">
                        </div>
                        <div class="form-group">
                            <textarea name="description" rows="2" class="form-control" placeholder="Description for the Image"
                                required></textarea>
                        </div>
                        <button class="btn btn-success">
                            <i class="fa fa-upload"></i> Upload Image
                        </button>
                    </form>
                </div>


            </div>

        </div>
    </div>
</div>

{{!-- Recent Uplaods --}}
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div>
                <div class="card mt-2">
                    <div class="card-header bg-dark text-white">
                        <h3><i class="far fa-images"></i>Recent Uploads</h3>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            {{#each images}}
                            <div class="col-md-2 mb-2">
                                <a href="/images/{{uniqueId}}">
                                    <img src="/public/upload/{{filename}}" alt="image_{{filename}}" class="w-100 h-100 img-thumbnail">
                                </a>
                            </div>
                            {{/each}}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

{{!-- Stats and Comments --}}

<div class="container-fluid p-2 d-flex ">
    <div class="row">
        <div class="col 12 col-md-6">
            {{> stats}}
        </div>
        <div class="col 12 col-md-6">
            {{> comments}}
        </div>
    </div>
</div>