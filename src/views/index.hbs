<div class="container p-4">

    <div class="row">
        <div class="col-12 col-md-8">
            <div>
                <div class="card-header bg-dark">
                    <h3 class="card-title text-white">
                        <i class="far fa-image"></i>Upload and Image
                    </h3>
                </div>
                <div class="card-body bg-white">
                    <form action="/images" method="post" enctype="multipart/form-data">
                        <div class="form-group">
                            <div class="custom-file">
                                <input type="file" name="image" class="custom-file-input" id="inputGroup"
                                    aria-describedby="inputGroupFileAddon" required>
                                <label for="inputGroupFile" class="custom-file-label">Choose file</label>
                            </div>

                        </div>
                        <div class="form-group">
                            <input type="text" name="title" class="form control" placeholder="Title for the image">
                        </div>
                        <div class="form-group">
                            <textarea name="description" rows="2" class="form-control" placeholder="Description for the Image"
                                required></textarea>
                        </div>
                        <button class="btn btn-success">
                            <i class="fa fa-upload"></i> Upload Image
                        </button>
                    </form>
                </div>


            </div>


            <div>
                <div class="card mt-2">
                    <div class="card-header bg-dark text-white">
                        <h3><i class="far fa-images"></i>Recent Uploads</h3>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            {{#each images}}
                            <div class="col-md-4 mb-2">
                                <a href="/images/{{uniqueId}}">
                                    <img src="/public/upload/{{filename}}" alt="image_{{filename}}" class="w-100 h-100 img-thumbnail">
                                </a>
                            </div>
                            {{/each}}
                        </div>
                    </div>
                </div>
            </div>

        </div>

        <div class="col 12 col-md-4">
            {{> stats}}
            {{> popular}}
            {{> comments}}
        </div>
    </div>
</div>