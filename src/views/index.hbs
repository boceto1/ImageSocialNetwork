<div>
    <div class="card-header bg-dark">
        <h3 class="card-title text-white">
            <i class="far fa-image"></i>Upload and Image
        </h3>
    </div>
    <div class="card-body bg-white">
        <form action="/images" method="post">
            <div class="form-group">
                    <div class="custom-file">
                        <input type="file" name="image" class="custom-file-input" id="inputGroup" aria-describedby="inputGroupFileAddon" required>
                        <label for="inputGroupFile" class="custom-file-label">Choose file</label>
                    </div>

            </div>
    <div class="form-group">
        <input type="text" name="title" class="form control" placeholder="Title for the image">
    </div>
    <div class="form-group">
        <textarea name="description" rows="2" class="form-control" placeholder="Description for the Image" required></textarea>
    </div>
    <button class="btn btn-success">
        <i class="fa fa-upload"></i> Upload Image
    </button>
    </form>
    </div>
</div>