<div>
    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h2>{{image.title}}</h2>
            <button class="btn btn-danger" id='btnDelete' data-id="{{image.uniqueId}}">
                <i class="fa fa-times"></i>Delete
            </button>
        </div>
        <div class="card-body">
            <p>{{image.description}}</p>
            <div class="text-center">
                <img src="/public/upload/{{image.filename}}" alt="image_{{imge.filename}}" class="img-fluid">
            </div>
        </div>
        <div class="card-footer d-flex justify-content-between align-items-center">
            <button class="btn btn-success" id="btnLike" data-id="{{image.filename}}">
                <i class="fas fa-thumbs-up"></i> Like
            </button>
            <p>
                <span class="likes-count"> {{image.likes}}</span>
                <i class="fas fa-heart"></i>
            </p>
            <p>
                {{image.views}} <i class="fas fa-eye"></i>
            </p>
            <p>
                 {{timeAgo image.timeStamp}} <i class="far fa-clock"></i>
            </p>
        </div>
        <div class="card mt-2">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h3>Comments</h3>
                <button class="btn btn-info" id="btn-toggle-comment">
                    <i class="fa fa-comment-o"></i>Post a comment
                </button>
            </div>
            <div class="card-body">
                <blockquote id="postComment">
                    <form action="/images/{{image.uniqueId}}/comments" method="post">
                    <div class="form-group">
                        <input type="text" class="form-control" name="name" placeholder="Name" required>
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" name="email" placeholder="Email" required>
                    </div>
                    <div class="form-group">
                        <textarea name="comment" rows="2" class="form-control" placeholder="Your comment" required></textarea>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-succes">
                            <i class="fa fa-comment"></i>Post
                        </button>
                    </div>
                    </form>
                </blockquote>
                <ul class="list-group p-4">
                    {{#each comments}}
                        <li class="list-group-item">
                            <div class="row">
                                <a href="#">
                                     <img src="http://gravatar.com/avatar/{{gravatar}}?d=monsterid&s=45"/>
                                </a>
                                <blockquote class="col">
                                    <p class="lead">
                                        {{comment}}
                                    </p>
                                    <footer class="blockquote-footer">
                                        {{name}} - {{timeAgo timeStamp}}
                                    </footer>
                                </blockquote>
                            </div>
                        </li>
                    {{/each}}
                </ul>
            </div>
        </div>
    </div>
</div>